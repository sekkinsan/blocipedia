<h1> Public Wikis </h1>
<div class="row">
<% @wikis.each do |wiki| %>
  <div class="media">
    <div class="media-body">
     <% if current_user.premium? || current_user.admin? %>
      <h4 class="media-heading">
        <%=link_to wiki.title, wiki %>
      </h4>
     <% elsif wiki.private == false %>
      <h4 class="media-heading">
        <%= link_to wiki.title, wiki %>
      </h4>
    </div>
    <% end %>
  </div>
<% end %>

  <div class="col-md-4">
    <%= link_to "New Wiki", new_wiki_path, class: 'btn btn-success' %>
  </div>
</div>